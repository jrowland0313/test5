    <script>
        // Example data for Schedule
        const scheduleData = [
            { opponent: 'Florida', date: 'April 30, 2024', location: 'Home' },
            { opponent: 'Arkansas', date: 'May 5, 2024', location: 'Away' },
            { opponent: 'Alabama', date: 'May 10, 2024', location: 'Home' },
        ];

        // Example data for Roster
        const rosterData = [
            { name: 'Eli Jones', position: 'Pitcher', number: 25 },
            { name: 'Cole Messina', position: 'Catcher', number: 12 },
            { name: 'Talmadge LeCroy', position: 'Infielder', number: 8 },
        ];

        // Function to populate Schedule section
        function populateSchedule() {
            const scheduleContainer = document.querySelector('.schedule');
            scheduleData.forEach(game => {
                const gameCard = document.createElement('div');
                gameCard.classList.add('game-card');
                gameCard.innerHTML = `
                    <h3>${game.opponent}</h3>
                    <p>Date: ${game.date}</p>
                    <p>Location: ${game.location}</p>
                `;
                scheduleContainer.appendChild(gameCard);
            });
        }

        // Function to populate Roster section
        function populateRoster() {
            const rosterContainer = document.querySelector('.roster');
            rosterData.forEach(player => {
                const playerCard = document.createElement('div');
                playerCard.classList.add('player-card');
                playerCard.innerHTML = `
                    <h3>${player.name}</h3>
                    <p>Position: ${player.position}</p>
                    <p>Number: ${player.number}</p>
                `;
                rosterContainer.appendChild(playerCard);
            });
        }

        // Call functions to populate Schedule and Roster sections
        populateSchedule();
        populateRoster();
    </script>
